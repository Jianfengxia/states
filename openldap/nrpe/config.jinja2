{% set ssl = salt['pillar.get']('ldap:ssl', False) %}
command[openldap_procs]=/usr/lib/nagios/plugins/check_procs -u openldap -C slapd
command[openldap_port]=/usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 389
{% if ssl %}
command[openldap_base]=/usr/lib/nagios/plugins/check_ldap -H 127.0.0.1 -p 389 -b '{{ salt["pillar.get"]("ldap:suffix") }}' -T
{% else %}
command[openldap_base]=/usr/lib/nagios/plugins/check_ldap -H 127.0.0.1 -p 389 -b '{{ salt["pillar.get"]("ldap:suffix") }}'
{% endif %}
