{%- macro elasticsearch_instance(which='elasticsearch') %}
{%- set prefix = 'graylog2_' if which == 'graylog2.server' else '' %}

{%- set nodes_total = 0 -%}
{#- this ugly hack is required to get the total number of nodes #}
{%- for item in pillar['elasticsearch']['cluster']['nodes'].viewitems() -%}
    {#- take 1 off the length to remove the _network key -#}
    {%- set nodes_total = nodes_total - 1 + item[1]|length -%}
    {%- if loop.last %}
{{ prefix }}elasticsearch_cluster:
  description: {{ which| title }} Elasticsearch cluster
  command: '/usr/lib/nagios/plugins/check_elasticsearch_cluster.py -c {{ nodes_total }}:{{ nodes_total }}'
    {%- endif %}
{%- endfor %}

{%- set pillar_string = 'elasticsearch:cluster:nodes:{0}:{1}'.format(grains['id'], which) %}
{%- if salt['pillar.get'](pillar_string + ':http', True) %}
{{ prefix }}elasticsearch_port_http:
  description: {{ which| title }} Elasticsearch Remote HTTP Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 9200
{%- endif %}

{{ prefix }}elasticsearch_port_transport:
  description: {{ which| title }} Elasticsearch Transport Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p {{ salt['pillar.get'](pillar_string + ':port', 9300) }}
{%- endmacro %}
