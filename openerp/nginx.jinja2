    server_name {%- for hostname in salt['pillar.get']('openerp:nginx:server_names') %}{{ hostname }}{%- if not loop.last %} {%- endif %}{%- endfor %}

    access_log  /var/log/nginx/openerp_access.log;

    location / {
        proxy_pass http://127.0.0.1:8069;
    }
