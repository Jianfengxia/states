{%- block body %}
    {{ super() }}
db:
  host: 127.0.0.1
  user: {{ username }}
  port: 5432
  password: {{ password }}

{%- if salt['pillar.get']('openerp:company_db', False) %}
company_db: {{ salt['pillar.get']('openerp:company_db') }}
{%- endif %}

admin:
  password: {{ salt['pillar.get']('openerp:password') }}

