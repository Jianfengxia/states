# ubuntu upstart script for uwsgi

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
umask 022

exec /usr/local/uwsgi/uwsgi --uid www-data --gid www-data --threaded-logger --logger graylog2:{{ pillar['graylog2_address'] }}:12201,uwsgi-emperor --carbon-id uwsgi-emperor --carbon {{ pillar['graphite_address'] }}:2003 --emperor /etc/uwsgi/
