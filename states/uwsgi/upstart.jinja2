# {{ pillar['message_do_not_modify'] }}
# ubuntu upstart script for uwsgi

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
umask 022

env LC_ALL=en_US.UTF-8
env LANG=en_US.UTF-8

{% if grains['virtual'] == 'kvm' and salt['file.file_exists']('/sys/kernel/mm/ksm/run') %}
script
    echo 1 > /sys/kernel/mm/ksm/run
    /usr/local/uwsgi/uwsgi --uid www-data --gid www-data --threaded-logger --logger graylog2:{{ pillar['graylog2_address'] }}:12201,{{ grains['id'] }} --carbon-id emperor --carbon {{ pillar['graphite_address'] }}:2003 --emperor /etc/uwsgi/ --no-orphans --ksm=10
end script
{% else %}
exec /usr/local/uwsgi/uwsgi --uid www-data --gid www-data --threaded-logger --logger graylog2:{{ pillar['graylog2_address'] }}:12201,{{ grains['id'] }} --carbon-id emperor --carbon {{ pillar['graphite_address'] }}:2003 --emperor /etc/uwsgi/ --no-orphans
{% endif %}
