{%- set admin = salt["pillar.get"]("influxdb:admin", False) %}

influxdb_procs:
  description: InfluxDB processes
  command: /usr/lib/nagios/plugins/check_procs -c 1:1 -u influxdb -a '/opt/influxdb/influxd -pidfile /var/run/influxdb/influxd.pid -config /etc/opt/influxdb/influxdb.conf'

influxdb_admin_port:
  description: InfluxDB admin TCP port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 8083

influxdb_admin_http:
  description: InfluxDB admin TCP port
  command: /usr/lib/nagios/plugins/check_http -H 127.0.0.1 -p 8083 {% if admin %}-e '401 Unauthorized'{% endif %}

influxdb_data_port:
  description: InfluxDB data TCP port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 8086

influxdb_data_http:
  description: InfluxDB data TCP port
  command: /usr/lib/nagios/plugins/check_http -H 127.0.0.1 -p 8086 -e '404 Not Found'

influxdb_meta_port:
  description: InfluxDB meta TCP port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 8088
