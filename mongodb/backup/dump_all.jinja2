#!/bin/sh
# {{ pillar['message_do_not_modify'] }}

dbname=all
NOW=`date '+%Y-%m-%d-%H_%M_%S'`
export TERM=dumb
workdir=`mktemp -d`
cd $workdir
mongodump
tar --xz -cf mongodb-$dbname-$NOW.tar.xz dump
mv mongodb-$dbname-$NOW.tar.xz /tmp
cd /tmp
rm -rf $workdir
/usr/local/bin/backup_store mongodb-$dbname-$NOW.tar.xz
