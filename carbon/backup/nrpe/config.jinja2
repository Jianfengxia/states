# {{ salt['pillar.get']('message_do_not_modify') }}
carbon_backup_procs:
  description: Carbon Backup Files Process
  command: '/usr/lib/nagios/plugins/check_procs -c 0:1 -u root -a "/usr/local/bin/backup-file carbon /var/lib/graphite/whisper"'

carbon_backup:
  description: Carbon Backup Age And Size
  command: /usr/lib/nagios/plugins/check_backup.py --formula=carbon.backup --check=carbon_backup
  check_interval: {{ 12 * 60 }} {#- 12 hours  #}
  freshness_threshold: {{ ((12 * 60) + 10) * 60 }} {#- 12 hours + 10 minutes #}
  timeout: 55
  arguments:
    facility: carbon
    warning: {{ salt['pillar.get']('backup:age', 48) }}
  dependencies:
    {#- no alert if load is too high #}
    - load_average
