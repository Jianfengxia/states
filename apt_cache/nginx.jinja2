upstream apt_cache {
    server localhost:3142;
}

server {
    listen 80;
{%- if ssl %}
    {{ ssl_config(ssl) }}
{%- endif %}
    server_name {% for hostname in salt['pillar.get']('apt_cache:hostnames') %}{{ hostname }}{% if not loop.last %} {% endif %}{% endfor %};

