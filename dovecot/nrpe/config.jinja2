dovecot_config:
  description: Dovecot Config daemon
  command: "/usr/lib/nagios/plugins/check_procs -c 1:1 -u root -a 'dovecot/config' -C config"

dovecot_log:
  description: Dovecot Logger
  command: "/usr/lib/nagios/plugins/check_procs -c 1:1 -u root -a 'dovecot/log' -C log"

dovecot_procs:
  description: Dovecot Master
  command: '/usr/lib/nagios/plugins/check_procs -c 1:1 -u root -C dovecot'

dovecot_anvil:
  description: Dovecot Users connection tracker
  command: "/usr/lib/nagios/plugins/check_procs -c 1:1 -u dovecot -a 'dovecot/anvil' -C anvil"

{%- if salt['pillar.get']('dovecot:ssl', False) %}
dovecot_port_imaps:
  description: Dovecot IMAPS Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 993
  dependencies:
    - dovecot_procs

dovecot_port_pop3s:
  description: Dovecot POP3S Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 995
  dependencies:
    - dovecot_procs

dovecot_simap:
  description: Dovecot SIMAP
  command: /usr/lib/nagios/plugins/check_simap -H 127.0.0.1 -p 993
  dependencies:
    - dovecot_port_imaps
{%- endif %}

dovecot_port_imap:
  description: Dovecot IMAPS Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 143
  dependencies:
    - dovecot_procs

dovecot_imap:
  description: Dovecot IMAP
  command: /usr/lib/nagios/plugins/check_imap -H 127.0.0.1 -p 143
  dependencies:
    - dovecot_port_imap

dovecot_port_pop3:
  description: Dovecot POP3 Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 110
  dependencies:
    - dovecot_procs

{%- if not salt['pillar.get']('__test__', False) and salt['pillar.get']('mail:check_mail_stack', False) %}
mailstack_functionality:
  description: Mail Stack Functionality
  command: /usr/lib/nagios/plugins/check_mail_stack.py
  dependencies:
    - dovecot_{% if salt['pillar.get']('dovecot:ssl', False) %}s{% endif %}imap
  arguments:
    {%- set mail_pillar = pillar['mail']['check_mail_stack'] %}
    mail:
      username: {{ username }}
      password: "{{ password }}"
      imap_server: localhost
      smtp_server: {{ mail_pillar['smtp_server'] }}
      {#- wait N seconds after sending mail #}
      smtp_wait: {{ salt['pillar.get']('mail:check_mail_stack:smtp_wait', 10) }}
      {#- Assuming that if dovecot is configured to use SSL,
          means all the stack uses SSL #}
      ssl: {{ salt['pillar.get']('dovecot:ssl', False) }}
{%- endif %}

dovecot_managesieve_port:
  description: Dovecot Managesieve Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 4190
  dependencies:
    - dovecot_procs
