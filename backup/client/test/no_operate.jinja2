# Script for checking integrity of tar archive (xz, bzip, gzip), or *.xz files
# used mainly for testing backup archives.

if [ -z $1 ]; then
  echo "Usage: $0 archive_file"
  exit 1
fi

# limit resources usage
ulimit -e 19
onice -c idle -p $$
XZ_DEFAULTS=--memlimit={{ salt['pillar.get']('backup:xz_memlimit', '64MiB') }}

{%- if salt['pillar.get']('__test__', False) %}
echo "Testing backup archive $1"
xz --list $1
{%- endif %}

case "$1" in
    *.tar.*)
{%- if salt['pillar.get']('__test__', False) %}
        tar -tvf $1
{%- endif %}
        if [ $(tar -tvf $1 | wc -l) -eq 0 ]; then
            echo "Archive $1 empty or broken"
            exit 1
        fi
        ;;
    *.xz)
        # not a tarbar
        if [ $(xz --list $1 | wc -l) -lt 2 ];then
            echo "Archive $1 empty or broken"
            exit 1
        fi
        ;;
    *)
        echo "Not supported file extension"
        exit 1
        ;;
esac
