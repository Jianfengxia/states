{%- macro backup_diamond_resources(formula) %}
{{ formula }}_backup_diamond_resources:
  file:
    - accumulated
    - name: processes
    - template: jinja
    - filename: /etc/diamond/collectors/ProcessResourcesCollector.conf
    - require_in:
      - file: /etc/diamond/collectors/ProcessResourcesCollector.conf
    - text:
      - |
        [[backup-{{ formula }}]]
        cmdline = ^\/bin\/bash \/etc\/cron.daily\/backup-{{ formula }}
{%- endmacro  %}
