{%- set nrpe_checks = {
  'free_disks_space': ['All Disks', '/usr/lib/nagios/plugins/check_disk -w 20% -c 10%'],
  'free_memory': ['Memory Usage', '/usr/lib/nagios/plugins/check_memory.py -w 90 -c 95'],
  'logged_users': ['Logged Users', '/usr/lib/nagios/plugins/check_users -w 5 -c 10'],
  'loopback_interface': ['Loopback Interface', '/usr/lib/nagios/plugins/check_ping -H 127.0.0.1 -p 1 -w 100,100% -c 100,100%'],
  'nrpe_procs': ['NRPE Processes', '/usr/lib/nagios/plugins/check_procs -u nagios -C nrpe -c 1:15'],
  'total_procs': ['Total Processes', '/usr/lib/nagios/plugins/check_procs -w 150 -c 200'],
  'zombie_procs': ['Zombie Processes', '/usr/lib/nagios/plugins/check_procs -w 5 -c 10 -s Z'],
  'oom_messages': ['Out Of Memory Messages', 'sudo /usr/lib/nagios/plugins/check_oom.py'],
  'nsca_passive_procs': ['NSCA Passive daemon Processes', '/usr/lib/nagios/plugins/check_procs -u nagios -C nsca_passive -c 1:1']
}
-%}

{%- for check in nrpe_checks %}
{{ check }}:
  description: {{ nrpe_checks[check][0] }}
  command:  {{ nrpe_checks[check][1] }}
{%- endfor -%}

{%- if salt['file.contains_regex']('/proc/swaps','^/') %}
free_swap_space:
  description: Swap Usage
  command: /usr/lib/nagios/plugins/check_swap -w 30% -c 10%
{%- endif %}

load_average:
  description: Load Average
  command: /usr/lib/nagios/plugins/check_load -w 10,5,3 -c 20,15,11

nrpe-remote-port:
  description: Remote NRPE Port
  check: check_tcp!5666
  passive: False
