{% set version = '0.20.6' %}
{%- from 'nginx/nrpe/instance.jinja2' import nginx_instance with context -%}
{{ nginx_instance('graylog2.web', http_uri='/login', deployment='graylog2', pillar_prefix='graylog2', extra_dependencies=('graylog2_web_port',)) }}

graylog2_web_procs:
  description: Graylog2 Web Daemon
  command: "/usr/lib/nagios/plugins/check_procs -c 1:1 -C java -a 'graylog2-web-interface-{{ version }}.jar'"

graylog2_web_port:
  description: Graylog2 Web TCP Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 9000
  dependencies:
    - graylog2_web_procs

graylog2_web_http:
  description: Graylog2 Web HTTP
  command: /usr/lib/nagios/plugins/check_http -I 127.0.0.1 -p 9000 -e '303 See Other'
  dependencies:
    - graylog2_web_port
