sentry_backup_postgres_procs:
  description: Sentry Backup PostgreSQL Database Process
  command: '/usr/lib/nagios/plugins/check_procs -c 0:1 -u root -a "/usr/local/bin/backup-postgresql {{ salt["pillar.get"]("sentry:db:name", "sentry") }}"'

sentry_backup:
  description: Sentry Backup Age And Size
  command: /usr/lib/nagios/plugins/check_backup.py --formula=sentry.backup --check=sentry_backup
  check_interval: {{ 12 * 60 }} {#- 12 hours  #}
  freshness_threshold: {{ ((12 * 60) + 10) * 60 }} {#- 12 hours + 10 minutes #}
  arguments:
    facility: postgresql-sentry
    warning: {{ salt['pillar.get']('backup:age', 48) }}
  timeout: 55
  dependencies:
    {#- no alert if load is too high #}
    - load_average
