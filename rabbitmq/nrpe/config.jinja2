# {{ pillar['message_do_not_modify'] }}
command[rabbitmq_procs]=/usr/lib/nagios/plugins/check_procs -c 1:1 -C beam{% if grains['num_cpus'] > 1 %}.smp{% endif %} -u rabbitmq
command[rabbitmq_port_management]=/usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 15672
command[rabbitmq_port_console]=/usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 55672
command[rabbitmq_port_amqp]=/usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 5672
{# epmd is Erlang Port Mapper Daemon #}
command[erlang_procs]=/usr/lib/nagios/plugins/check_procs -c 1:1 -C epmd -u rabbitmq
command[erlang_port]=/usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 4369
