erlang_procs:
  description: Erlang Port Mapper Daemon
  command: '/usr/lib/nagios/plugins/check_procs -c 1:1 -C epmd'

erlang_port:
  {%- set timeout = 30 %}
  description: Erlang Port Mapper Port
  command: /usr/lib/nagios/plugins/check_tcp -H 127.0.0.1 -p 4369 -t {{ timeout }}
  timeout: {{ timeout }}
  dependencies:
    - erlang_procs
