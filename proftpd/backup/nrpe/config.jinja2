{%- from 'nrpe/passive.jinja2' import passive_interval with context -%}

# {{ salt['pillar.get']('message_do_not_modify') }}

proftpd_backup_postgres_procs:
  description: ProFTPD Backup PostgreSQL Database Process
  command: '/usr/lib/nagios/plugins/check_procs -c 0:1 -u root -a "/usr/local/bin/backup-postgresql {{ salt["pillar.get"]("proftpd:db:name", "proftpd") }}"'

proftpd_backup:
  description: ProFTPD Backup Age And Size
  command: /usr/lib/nagios/plugins/check_backup.py --formula=proftpd.backup --check=proftpd_backup
  {{ passive_interval(12 * 60) }} {#- 12 hours #}
  arguments:
    facility: postgresql-proftpd
    warning: {{ salt['pillar.get']('backup:age', 48) }}
  timeout: 55
  dependencies:
    {#- no alert if load is too high #}
    - load_average
