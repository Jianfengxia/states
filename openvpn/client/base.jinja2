{%- set vpn_instance = salt['pillar.get']('openvpn:servers:' ~ instance) %}
proto {{ vpn_instance['protocol'] | default('udp') }}
resolv-retry infinite
nobind
user nobody
group nogroup
persist-key
persist-tun
comp-lzo
syslog openvpn-client-{{ instance }}
{%- if salt['pillar.get']('debug', False) %}
verb 15
{%- else %}
verb 4
{%- endif %}
writepid /var/run/openvpn-client/{{ instance }}.pid

