# {{ pillar['message_do_not_modify'] }}

[daemon]
user=shinken
group=shinken

pidfile=/var/lib/shinken/{{ shinken_component }}.pid
local_log=/var/log/shinken/{{ shinken_component }}.log
workdir=/var/lib/shinken

use_local_log=1
log_level={{ pillar['shinken']['log_level']|default("INFO") }}

host=0.0.0.0
daemon_enabled=1

{#interval_poll=5#}
{#maxfd=1024#}
idontcareaboutsecurity=0

{# until shinken 1.4 isn't out, can't use SSL #}
{#
{% if pillar['shinken']['ssl']|default(False) %}
use_ssl=1
certs_dir=/etc/ssl/{{ pillar['shinken']['ssl'] }}
ca_cert=/etc/ssl/{{ pillar['shinken']['ssl'] }}/chained_ca.crt
server_cert=/etc/ssl/{{ pillar['shinken']['ssl'] }}/server.pem
#hard_ssl_name_check=0
{% else %}
#}
use_ssl=0
{#{% endif %}#}
