# ubuntu upstart script for shinken-{{ shinken_component }}

start on (filesystem and net-device-up IFACE=eth0)
stop on runlevel [!2345]

respawn
respawn limit 5 60

pre-start script
  install -o shinken -g  shinken -m 750 -d /var/run/shinken
end script

script
{%- if max_filedescriptors|default(False) %}
  ulimit -Hn {{ max_filedescriptors }}
  ulimit -Sn {{ max_filedescriptors }}
{%- endif %}
  exec /usr/local/shinken/bin/shinken-{{ shinken_component }} -c /etc/shinken/{{ shinken_component }}.conf
  emit shinken-arbiter-{{ shinken_component }}
end script
