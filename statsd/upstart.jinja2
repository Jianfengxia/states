# ubuntu upstart script for statsd

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5
umask 022

exec /usr/local/statsd/bin/pystatsd-server --transport graphite --flush-interval 10000 --gauges-prefix 'stats.gauges' --name {{ grains['id'] }} --graphite-host {{ pillar['graphite_address'] }} --counters-prefix '{{ grains['id'] }}.stats' --timers-prefix '{{ grains['id'] }}.stats' --pidfile /var/run/pystatsd.pid | logger -t "statsd" -p debug
