/var/log/syslog
/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/daemon.log
/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/debug
/var/log/messages
{
    rotate {{ salt['pillar.get']('rsyslog:rotate', 14) }}
    daily
    missingok
    notifempty
    delaycompress
    compress
    sharedscripts
    create 640 syslog adm
    postrotate
        reload rsyslog >/dev/null 2>&1 || true
    endscript
    su root syslog
}
