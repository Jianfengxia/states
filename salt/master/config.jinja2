# {{ pillar['message_do_not_modify'] }}

fileserver_backend:
  - git
  - roots

ext_pillar:
  - git: {{ pillar['salt_master']['pillar']['branch'] }} {{ pillar['salt_master']['pillar']['remote'] }}

worker_threads: {{ pillar['salt_master']['workers']|default(5) }}
gitfs_remotes:
{% for repo in pillar['salt_master']['gitfs_remotes'] %}
  - {{ repo }}
{%- endfor %}

log_file: file:///dev/log
log_level: debug
log_fmt_logfile: '%(asctime)-15s salt-master[%(process)d] %(name)s: %(message)s'
log_datefmt_logfile: '%b %d %H:%M:%S'
loop_interval: {{ salt['pillar.get']('salt_master:loop_interval', 60) }}
