# {{ pillar['message_do_not_modify'] }}

{% if pillar['salt_master']['ssl']|default(False) %}
server {
    listen 80;
    server_name {{ pillar['salt_master']['hostname'] }};
    return 301 https://{{ pillar['salt_master']['hostname'] }}$request_uri;
}
{% endif %}

server {
{% if pillar['salt_master']['ssl']|default(False) %}
    listen 443 ssl;
    ssl_certificate /etc/ssl/{{ pillar['salt_master']['ssl'] }}/chained_ca.crt;
    ssl_certificate_key /etc/ssl/{{ pillar['salt_master']['ssl'] }}/server.pem;
    ssl_client_certificate /etc/ssl/{{ pillar['salt_master']['ssl'] }}/ca.crt;
    ssl_ciphers RC4:HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
{% else %}
    listen 80;
{% endif %}

    server_name {{ pillar['salt_master']['hostname'] }};

    root /usr/local/salt-ui;
    index index.html;

    expires max;
    autoindex off;

    location = / {
        proxy_pass http://127.0.0.1:8000;
        proxy_read_timeout 120s;
        expires 0;
    }

{% for resource in ('/login', '/minions', '/jobs') %}
    location {{ resource }} {
        proxy_pass http://127.0.0.1:8000;
        proxy_read_timeout 120s;
        expires 0;
    }
{% endfor %}
}
