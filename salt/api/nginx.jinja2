# {{ pillar['message_do_not_modify'] }}

server {
    listen 80;
{% if pillar['salt_master']['ssl']|default(False) %}
{% if pillar['salt_master']['ssl_redirect']|default(False) %}
    {# if https, redirect http port 80 to https port 443 #}
    server_name {% for hostname in pillar['salt_master']['hostnames'] %}{{ hostname }}{% if not loop.last %} {% endif %}{% endfor %};
    return 301 https://{{ pillar['salt_master']['hostnames'][0] }}$request_uri;
}
{#- https server -#}
server {
{% endif %}{# redirect http to https #}
    listen 443 ssl;
    ssl_certificate /etc/ssl/{{ pillar['salt_master']['ssl'] }}/chained_ca.crt;
    ssl_certificate_key /etc/ssl/{{ pillar['salt_master']['ssl'] }}/server.pem;
    ssl_client_certificate /etc/ssl/{{ pillar['salt_master']['ssl'] }}/ca.crt;
    ssl_ciphers RC4:HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
{% endif %}
{#- web app logic #}
    server_name {% for hostname in pillar['salt_master']['hostnames'] %}{{ hostname }}{% if not loop.last %} {% endif %}{% endfor %};

    root /usr/local/salt-ui;
    index index.html;

    expires max;
    autoindex off;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_read_timeout 120s;
        expires 0;
    }

{% for resource in ('/login', '/minions', '/jobs') %}
    location {{ resource }} {
        proxy_pass http://127.0.0.1:8000;
        proxy_read_timeout 120s;
        expires 0;
    }
{% endfor %}
}
