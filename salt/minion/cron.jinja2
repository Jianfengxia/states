#!/bin/bash
# {{ pillar['message_do_not_modify'] }}

# log start stop time to syslog
source /usr/local/share/salt_common.sh
# Ensure that only one instance of this script is running at a time
locking_script
log_start_script "$@"
trap "log_stop_script \$?" EXIT

if [ -x /etc/cron.twice_daily/salt_minion_pillar ]; then
    /etc/cron.twice_daily/salt_minion_pillar
    /usr/lib/nagios/plugins/check_minion_pillar_render.py --formula=salt.minion --check=salt_minion_pillar_render --cronresult
else
    logger -t "$(basename "$0")[$$]" -p 'local0.info' \
        "Cannot validate the pillar data first, just run highstate anyway"
fi
/usr/bin/salt-call state.highstate --return syslog,timestamps{% if 'sentry_dsn' in pillar %},sentry_common{% endif %}
