salt_minion_procs:
  description: Salt Minion Daemon
  command: /usr/lib/nagios/plugins/check_procs -c 1:3 -C salt-minion -u root

salt_minion_last_success:
  description: Salt Minion last success highstate call
  command: sudo /usr/lib/nagios/plugins/check_minion_last_success.py --formula=salt.minion --check=salt_minion_last_success
  first_notification_delay: 30
  timeout: 55
  arguments:
    max_hours: 48
  check_interval: {{ 1 * 60 }} {#- 1 hour  #}
  freshness_threshold: {{ ((1 * 60) + 10) * 60 }} {#- 1 hours + 10 minutes #}
  dependencies:
    {#- no alert if load is too high #}
    - load_average

salt_minion_pillar_render:
  description: Salt Minion pillar render
  command: sudo /usr/lib/nagios/plugins/check_minion_pillar_render.py --formula=salt.minion --check=salt_minion_pillar_render
  check_interval: {{ 12 * 60 }} {#- 12 hour  #}
  freshness_threshold: {{ ((12 * 60) + 10) * 60 }} {#- 12 hours + 10 minutes #}
  timeout: 55
  max_check_attempts: 5
  retry_interval: 6
  arguments:
    freshness: {{ 12 * 60 + 20 }} {#- cron interval + timeout + 5 mins #}
  dependencies:
    {#- no alert if load is too high #}
    - load_average
