{%- macro nginx_instance(deployment, http=True, http_uri='/', http_result=None, http_port=80, https_uri=None, https_result="200 OK", prefix=None, timeout=False, domain_name=None, allow_ssl_redirect=True, check_interval=False) -%}
    {%- set expire_days = salt['pillar.get']('ssl:warning_certificate', 15) -%}
    {%- set first_ip = salt['network.ip_addrs']()[0] -%}
    {%- if not prefix -%}
        {%- set prefix = deployment -%}
    {%- endif -%}
    {%- if not domain_name -%}
        {%- set domain_name = salt['pillar.get'](prefix + ':hostnames', ['127.0.0.1'])[0] -%}
    {%- endif %}
    {#- if allow_ssl_redirect is True (because we can't trust pillar value in
        every cases.
        and pillar value ask for it
        http is redirected to https, force a specific header.
      -#}
    {%- if salt['pillar.get'](prefix + ':ssl_redirect', False) and allow_ssl_redirect -%}
        {%- set http_result="301 Moved Permanently" -%}
    {%- elif not http_result -%}
        {%- set http_result="200 OK" -%}
    {%- endif %}

{{ deployment }}_nginx_http:
  description: {{ deployment|capitalize }} HTTP Protocol
  command: /usr/lib/nagios/plugins/check_http -H {{ domain_name }} -u {{ http_uri }} -p {{ http_port }} -e '{{ http_result }}' -I {{ first_ip }}
    {%- if timeout %} --timeout={{ timeout }}{% endif -%}
    {%- if salt['pillar.get']('__test__', False) %} -v{%- endif %}
    {%- if check_interval %}
  check_interval: {{ check_interval }}
  freshness_threshold: {{ (check_interval + 10) * 60 }} {#- check_interval + 10 minutes in seconds #}
    {%- endif %}
  service_dependencies: ',nginx_master'

{%- if salt['pillar.get'](prefix + ':ssl', False) %}
{%- set https_uri = http_uri if not https_uri %}

{{ deployment }}_nginx_https:
  description: {{ deployment|capitalize }} HTTPS Protocol
  command: /usr/lib/nagios/plugins/check_http -S -H {{ domain_name }} -u {{ https_uri }} -e '{{ https_result }}' -I {{ first_ip }}
        {%- if timeout %} --timeout={{ timeout }}{% endif -%}
        {%- if salt['pillar.get']('__test__', False) %} -v{%- endif %}
    {%- if check_interval %}
  check_interval: {{ check_interval }}
  freshness_threshold: {{ (check_interval + 10) * 60 }} {#- check_interval + 10 minutes in seconds #}
    {%- endif %}
  service_dependencies: ',nginx_master'

{{ deployment }}_nginx_https_certificate:
  description: {{ deployment|capitalize }} HTTPS Certificate Expiration
  check_interval: {{ 24 * 60 }} {#- a day  #}
  freshness_threshold: {{ ((24 * 60) + 10) * 60 }} {#- 24 hours + 10 minutes #}
  command: /usr/lib/nagios/plugins/check_http -S -H {{ domain_name }} -C {{ expire_days }} -I {{ first_ip }}
  service_dependencies: ',nginx_master'

  {% if domain_name|replace('.', '')|int == 0 %} {# only check if it is a domain, not IP. int returns 0 for unconvertible value #}
{{ deployment }}_ssl_configuration:
  description: {{ deployment|capitalize }} SSL Configuration
  check_interval: {{ 24 * 60 }} {#- a day  #}
  freshness_threshold: {{ ((24 * 60) + 10) * 60 }} {#- 24 hours + 10 minutes #}
  command: /usr/lib/nagios/plugins/check_ssl_configuration.py
  arguments:
    host: {{ domain_name }}
    port: 443
  service_dependencies: ',nginx_master'
  {%- endif %}
{%- endif -%}
{%- endmacro %}
