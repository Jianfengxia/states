# {{ salt['pillar.get']('message_do_not_modify') }}
service rsync
{
    disable = no
    socket_type = stream
    wait = no
    user = root
    server = /usr/bin/rsync
    server_args = --daemon
    log_on_failure += USERID
    per_source = {{ per_source }}
}
