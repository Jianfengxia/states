postfix_backup_procs:
  description: Postfix Backup Files Process
  command: "/usr/lib/nagios/plugins/check_procs -c 0:1 -u root -a '/usr/local/bin/backup-file postfix /var/spool postfix'"

postfix_backup:
  description: Postfix Backup Age And Size
  command: /usr/lib/nagios/plugins/check_backup.py --formula=postfix.backup --check=postfix_backup
  check_interval: {{ 12 * 60 }} {#- 12 hours  #}
  freshness_threshold: {{ ((12 * 60) + 10) * 60 }} {#- 12 hours + 10 minutes #}
  arguments:
    facility: postfix
    warning: {{ salt['pillar.get']('backup:age', 48) }}
  timeout: 55
  dependencies:
    {#- no alert if load is too high #}
    - load_average
